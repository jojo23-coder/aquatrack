{
  "meta": {
    "package_name": "aquatrack-engine",
    "package_version": "0.1.0",
    "purpose": "Deterministic plan generator: setup -> recommendations -> calculators -> rendered plan (phases/checklists/limits).",
    "principles": [
      "No brand-specific logic; only generic product roles and effect models.",
      "Deterministic outputs (no LLM generation inside app).",
      "User can override recommendations with explicit risk acknowledgement."
    ]
  },

  "schemas": {
    "setup.schema.json": {
      "version": "0.1",
      "fields": {
        "user_preferences": {
          "cycling_mode_preference": { "type": "string", "enum": ["auto", "fishless_ammonia", "dark_start", "fish_in", "plant_assisted"], "default": "auto" }
        },
        "tank_profile": {
          "tank_volume_l_gross": { "type": "number", "required": true },
          "net_volume_method": { "type": "string", "enum": ["explicit", "estimate_multiplier"], "default": "estimate_multiplier" },
          "estimated_net_multiplier": { "type": "number", "default": 0.85 },
          "net_water_volume_l": { "type": "number", "required_if": { "tank_profile.net_volume_method": "explicit" } },
          "substrate": {
            "type": "object",
            "fields": {
              "type": { "type": "string", "enum": ["inert", "aquasoil"], "required": true },
              "sand_cap_cm": { "type": "number", "default": 2.0 }
            }
          },
          "hardscape": {
            "type": "object",
            "fields": {
              "type": { "type": "string", "enum": ["wood", "stone", "mixed"], "default": "mixed" }
            }
          },
          "filtration": {
            "type": "object",
            "fields": {
              "filter_model": { "type": "string" },
              "rated_flow_lph": { "type": "number" },
              "flow_class": { "type": "string", "enum": ["low", "medium", "high"], "default": "medium" }
            }
          },
          "heater_installed": { "type": "boolean", "default": true },
          "co2": {
            "type": "object",
            "fields": {
              "enabled": { "type": "boolean", "default": true },
              "injection_type": { "type": "string", "enum": ["inline", "diffuser", "reactor"], "required": true },
              "target_ph_drop": { "type": "number", "default": 1.0 },
              "surface_agitation": { "type": "string", "enum": ["flat", "gentle_ripple", "turbulent"], "default": "gentle_ripple" }
            }
          },
          "temperature_target_c": { "type": "array", "items": "number", "default": [22, 24] }
        },
        "water_source_profile": {
          "tap_ph": { "type": "number", "required": true },
          "tap_gh_dgh": { "type": "number", "required": true },
          "tap_kh_dkh": { "type": "number_or_null", "default": null },
          "tap_ammonia_ppm": { "type": "number", "default": 0 },
          "disinfectant": { "type": "string", "enum": ["none", "chlorine", "chloramine", "unknown"], "default": "unknown" },
          "weekly_water_change_percent_target": { "type": "number", "default": 25 }
        },
        "biology_profile": {
          "plants": {
            "type": "object",
            "fields": {
              "categories": { "type": "array", "items": { "type": "string", "enum": ["moss", "epiphytes", "stems", "floaters", "root_feeders"] }, "required": true },
              "demand_class": { "type": "string", "enum": ["low", "medium", "high", "auto"], "default": "auto" }
            }
          },
          "livestock_plan": {
            "type": "object",
            "fields": {
              "fish": { "type": "array", "default": [] },
              "shrimp": { "type": "array", "default": [] },
              "cleanup_crew": { "type": "array", "default": [] }
            }
          },
          "livestock_traits": {
            "type": "object",
            "fields": {
              "is_sensitive": { "type": "boolean", "default": false },
              "has_diggers": { "type": "boolean", "default": false }
            }
          }
        },
        "product_stack": {
          "ammonia_source": {
            "type": "object",
            "fields": {
              "type": { "type": "string", "enum": ["pure_ammonia", "fish_food", "none"], "default": "pure_ammonia" },
              "solution_percent": { "type": "number_or_null", "default": 10 }
            }
          },
          "selected_product_ids": {
            "type": "array",
            "items": "string",
            "required": true,
            "notes": "References into product.catalog.instance.json"
          }
        }
      }
    },

    "product.catalog.schema.json": {
      "version": "0.1",
      "product_definition": {
        "product_id": "string",
        "display_name": "string",
        "category": {
          "type": "string",
          "enum": [
            "detoxifier_conditioner",
            "bacteria_starter",
            "remineralizer_gh",
            "buffer_kh",
            "ammonia_source",
            "fertilizer_micros",
            "fertilizer_macros",
            "water_clarifier",
            "water_quality_support"
          ]
        },
        "dose_model": {
          "dose_basis": { "type": "string", "enum": ["per_volume", "per_event", "conditional", "none"] },
          "amount": "number_or_null",
          "unit": { "type": "string", "enum": ["mL", "g", "drops", "none"] },
          "per_volume_l": "number_or_null",
          "frequency_default": { "type": "string", "enum": ["daily", "weekly", "per_water_change", "as_needed", "one_time", "none"] },
          "scaling_rule": { "type": "string", "enum": ["linear_by_volume", "fixed", "none"] },
          "notes": "string_or_null"
        },
        "effect_model": {
          "effect_type": {
            "type": "string",
            "enum": [
              "delta_GH_dGH",
              "delta_KH_dKH",
              "target_TAN_ppm",
              "trace_micro_support",
              "bioaugmentation_support",
              "detox_support",
              "clarify_support",
              "none"
            ]
          },
          "strength": "number_or_null",
          "strength_units": "string_or_null",
          "calculation_method": "string_or_null",
          "notes": "string_or_null"
        },
        "constraints": {
          "allowed_phases": "array_or_null",
          "requires_trigger": { "type": "boolean", "default": false },
          "warnings": "array"
        }
      }
    },

    "plan.output.schema.json": {
      "version": "0.1",
      "fields": {
        "meta": { "setup_version": "string", "plan_version": "string", "generated_at_iso": "string" },
        "selection": {
          "recommended_cycling_mode": "string",
          "user_selected_cycling_mode": "string",
          "reason_codes": "array",
          "override_acknowledged": "boolean"
        },
        "derived": {
          "net_water_volume_l": "number",
        "weekly_water_change_percent_range": "number",
        "weekly_water_change_volume_l_range": "number"
        },
        "global_reference": { "targets": "object", "parameter_limits": "object", "dosing_reference": "object" },
        "phases": "array",
        "phase_checklists": "array",
        "worksheets": "array",
        "notes": "array"
      }
    }
  },

  "decision_tables": {
    "waterfall.table.json": {
      "version": "0.1",
      "source": "data/waterfall-table.csv",
      "rules": [
        {
          "priority": 1,
          "rule_name": "PHYSICS_ERROR",
          "conditions": {
            "substrate": "Inert",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "ANY",
            "plant_light_demand": "ANY",
            "plant_density": "ANY",
            "ammonia_src": "Soil_Leech",
            "selected_method": "ANY"
          },
          "status": "FAIL STATE",
          "message": "Impossible Physics. Inert substrate cannot leech ammonia. You must select Liquid Ammonia."
        },
        {
          "priority": 2,
          "rule_name": "CRUELTY_RISK",
          "conditions": {
            "substrate": "ANY",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "ANY",
            "plant_light_demand": "ANY",
            "plant_density": "ANY",
            "ammonia_src": "None",
            "selected_method": "FISH-IN"
          },
          "status": "CRITICAL RISK",
          "message": "Animal Cruelty. With no soil or liquid ammonia, you are forcing fish to generate the cycle waste in a sterile tank."
        },
        {
          "priority": 3,
          "rule_name": "MISSING_FUEL",
          "conditions": {
            "substrate": "ANY",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "ANY",
            "plant_light_demand": "ANY",
            "plant_density": "ANY",
            "ammonia_src": "None",
            "selected_method": "FISHLESS"
          },
          "status": "FAIL STATE",
          "message": "Missing Fuel. You cannot run a fishless cycle without an ammonia source (Liquid or Soil)."
        },
        {
          "priority": 4,
          "rule_name": "DOUBLE_DOSE",
          "conditions": {
            "substrate": "Aquasoil",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "ANY",
            "plant_light_demand": "ANY",
            "plant_density": "ANY",
            "ammonia_src": "Liquid",
            "selected_method": "FISHLESS"
          },
          "status": "CRITICAL RISK",
          "message": "Toxicity Spike. Aquasoil already releases ammonia. Dosing liquid ammonia on top will create toxic levels."
        },
        {
          "priority": 5,
          "rule_name": "LIGHT_INSUFFICIENT",
          "conditions": {
            "substrate": "ANY",
            "light": "Basic",
            "co2": "ANY",
            "growth_speed": "ANY",
            "plant_light_demand": "High",
            "plant_density": "ANY",
            "ammonia_src": "ANY",
            "selected_method": "ANY"
          },
          "status": "FAIL STATE",
          "message": "Hardware Failure. You selected High Light Demand plants but only have Basic Lights. They will die regardless of the cycle."
        },
        {
          "priority": 6,
          "rule_name": "SILENT_REQ_SOIL",
          "conditions": {
            "substrate": "Inert",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "ANY",
            "plant_light_demand": "ANY",
            "plant_density": "ANY",
            "ammonia_src": "ANY",
            "selected_method": "SILENT CYCLE"
          },
          "status": "FAIL STATE",
          "message": "Method Failure. Silent Cycle relies on soil nutrients to feed roots. Inert sand cannot support this."
        },
        {
          "priority": 7,
          "rule_name": "SILENT_REQ_BIOMASS",
          "conditions": {
            "substrate": "ANY",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "ANY",
            "plant_light_demand": "ANY",
            "plant_density": "Low",
            "ammonia_src": "ANY",
            "selected_method": "SILENT CYCLE"
          },
          "status": "FAIL STATE",
          "message": "Biology Failure. Silent Cycle requires High Plant Density to consume ammonia immediately. Low density results in algae."
        },
        {
          "priority": 8,
          "rule_name": "SILENT_REQ_SPEED",
          "conditions": {
            "substrate": "ANY",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "Slow",
            "plant_light_demand": "ANY",
            "plant_density": "ANY",
            "ammonia_src": "ANY",
            "selected_method": "SILENT CYCLE"
          },
          "status": "FAIL STATE",
          "message": "Biology Failure. Slow plants (Buce/Anubias) cannot metabolize ammonia fast enough for a Silent Cycle. You need Fast Stems."
        },
        {
          "priority": 9,
          "rule_name": "SILENT_REQ_CO2",
          "conditions": {
            "substrate": "ANY",
            "light": "ANY",
            "co2": "FALSE",
            "growth_speed": "ANY",
            "plant_light_demand": "High",
            "plant_density": "ANY",
            "ammonia_src": "ANY",
            "selected_method": "SILENT CYCLE"
          },
          "status": "FAIL STATE",
          "message": "Metabolic Failure. High Demand plants without CO2 cannot grow fast enough to absorb the ammonia spike."
        },
        {
          "priority": 10,
          "rule_name": "SILENT_REQ_LIGHT",
          "conditions": {
            "substrate": "ANY",
            "light": "Basic",
            "co2": "ANY",
            "growth_speed": "Fast",
            "plant_light_demand": "Low",
            "plant_density": "ANY",
            "ammonia_src": "ANY",
            "selected_method": "SILENT CYCLE"
          },
          "status": "WARNING",
          "message": "Energy Bottleneck. Even for low-demand weeds, basic lights might be too weak to drive the *rapid* growth needed for a Silent Cycle."
        },
        {
          "priority": 11,
          "rule_name": "ALGAE_BOMB_CHECK",
          "conditions": {
            "substrate": "ANY",
            "light": "High_Performance",
            "co2": "FALSE",
            "growth_speed": "ANY",
            "plant_light_demand": "Low",
            "plant_density": "ANY",
            "ammonia_src": "Liquid",
            "selected_method": "FISHLESS"
          },
          "status": "CONDITIONAL",
          "message": "Algae Risk. High Light + Low Demand Plants + No CO2 = Algae Farm. You must DIM lights to <30%."
        },
        {
          "priority": 12,
          "rule_name": "DARK_START_INEFFICIENT",
          "conditions": {
            "substrate": "Aquasoil",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "Fast",
            "plant_light_demand": "ANY",
            "plant_density": "ANY",
            "ammonia_src": "Soil_Leech",
            "selected_method": "DARK START"
          },
          "status": "WARNING",
          "message": "Wasted Potential. Fast plants need nutrients immediately. A Dark Start removes the initial soil ammonia spike they crave."
        },
        {
          "priority": 13,
          "rule_name": "DARK_START_POINTLESS",
          "conditions": {
            "substrate": "Inert",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "ANY",
            "plant_light_demand": "ANY",
            "plant_density": "ANY",
            "ammonia_src": "None",
            "selected_method": "DARK START"
          },
          "status": "FAIL STATE",
          "message": "Pointless. Inert substrate with no ammonia source is just a bucket of water. Darkness achieves nothing."
        },
        {
          "priority": 14,
          "rule_name": "FAST_PLANT_STARVATION",
          "conditions": {
            "substrate": "Inert",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "Fast",
            "plant_light_demand": "High",
            "plant_density": "ANY",
            "ammonia_src": "ANY",
            "selected_method": "ANY"
          },
          "status": "FAIL STATE",
          "message": "Starvation. High Demand Fast plants need Soil or Water Column dosing + High Light. On Inert sand, they will die."
        },
        {
          "priority": 15,
          "rule_name": "FAST_PLANT_HUNGER",
          "conditions": {
            "substrate": "Inert",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "Fast",
            "plant_light_demand": "Low",
            "plant_density": "ANY",
            "ammonia_src": "Liquid",
            "selected_method": "FISHLESS"
          },
          "status": "WARNING",
          "message": "Nutrient Gap. Low Demand Fast plants (weeds) survive light levels, but starve on Inert sand. You MUST add Liquid Fertilizer daily."
        },
        {
          "priority": 16,
          "rule_name": "OPTIMAL_SILENT",
          "conditions": {
            "substrate": "Aquasoil",
            "light": "High_Performance",
            "co2": "TRUE",
            "growth_speed": "Fast",
            "plant_light_demand": "High",
            "plant_density": "High",
            "ammonia_src": "Soil_Leech",
            "selected_method": "SILENT CYCLE"
          },
          "status": "RECOMMENDED",
          "message": "Optimal Match. High energy, high demand, and high biomass will consume the soil ammonia instantly."
        },
        {
          "priority": 17,
          "rule_name": "OPTIMAL_DARK_START",
          "conditions": {
            "substrate": "Aquasoil",
            "light": "High_Performance",
            "co2": "TRUE",
            "growth_speed": "Slow",
            "plant_light_demand": "Low",
            "plant_density": "ANY",
            "ammonia_src": "Soil_Leech",
            "selected_method": "DARK START"
          },
          "status": "RECOMMENDED",
          "message": "Optimal Match. High light + Slow plants usually equals algae. Dark start avoids this risk perfectly."
        },
        {
          "priority": 18,
          "rule_name": "OPTIMAL_LOW_TECH_SOIL",
          "conditions": {
            "substrate": "Aquasoil",
            "light": "Basic",
            "co2": "FALSE",
            "growth_speed": "Slow",
            "plant_light_demand": "Low",
            "plant_density": "ANY",
            "ammonia_src": "Soil_Leech",
            "selected_method": "FISHLESS"
          },
          "status": "RECOMMENDED",
          "message": "Optimal Low Tech. Soil provides nutrients, low light prevents algae, and water changes manage the cycle."
        },
        {
          "priority": 19,
          "rule_name": "OPTIMAL_INERT_DOSING",
          "conditions": {
            "substrate": "Inert",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "Slow",
            "plant_light_demand": "Low",
            "plant_density": "ANY",
            "ammonia_src": "Liquid",
            "selected_method": "FISHLESS"
          },
          "status": "RECOMMENDED",
          "message": "Optimal Control. Dosing liquid ammonia allows precise control for delicate/slow plants. Safe and reliable."
        },
        {
          "priority": 20,
          "rule_name": "VALID_DARK_START_INERT",
          "conditions": {
            "substrate": "Inert",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "ANY",
            "plant_light_demand": "ANY",
            "plant_density": "ANY",
            "ammonia_src": "Liquid",
            "selected_method": "DARK START"
          },
          "status": "VALID",
          "message": "Biologically Valid. Dosing ammonia in the dark cycles the bacteria safely without any algae risk."
        },
        {
          "priority": 21,
          "rule_name": "DEFAULT_SILENT",
          "conditions": {
            "substrate": "ANY",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "ANY",
            "plant_light_demand": "ANY",
            "plant_density": "ANY",
            "ammonia_src": "ANY",
            "selected_method": "SILENT CYCLE"
          },
          "status": "FAIL STATE",
          "message": "Configuration Mismatch. You selected Silent Cycle but lack the specific Hardware/Plant combination to make it safe."
        },
        {
          "priority": 22,
          "rule_name": "DEFAULT_DARK_START",
          "conditions": {
            "substrate": "ANY",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "ANY",
            "plant_light_demand": "ANY",
            "plant_density": "ANY",
            "ammonia_src": "ANY",
            "selected_method": "DARK START"
          },
          "status": "RECOMMENDED",
          "message": "Safe Fallback. Dark Start is rarely 'wrong', just sometimes slow."
        },
        {
          "priority": 23,
          "rule_name": "DEFAULT_FISHLESS",
          "conditions": {
            "substrate": "ANY",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "ANY",
            "plant_light_demand": "ANY",
            "plant_density": "ANY",
            "ammonia_src": "ANY",
            "selected_method": "FISHLESS"
          },
          "status": "RECOMMENDED",
          "message": "Standard Method. If no other warnings triggered, Fishless Cycling is the standard recommendation."
        },
        {
          "priority": 24,
          "rule_name": "DEFAULT_FISH_IN",
          "conditions": {
            "substrate": "ANY",
            "light": "ANY",
            "co2": "ANY",
            "growth_speed": "ANY",
            "plant_light_demand": "ANY",
            "plant_density": "ANY",
            "ammonia_src": "ANY",
            "selected_method": "FISH-IN"
          },
          "status": "WARNING",
          "message": "Suboptimal. Fishless methods are objectively safer. Proceed only if you are experienced."
        }
      ]
    },
    "cycling_mode.decision_table.json": {
      "version": "0.1",
      "derived_fields_logic": {
        "shrimp_planned": "true if livestock_plan.shrimp total count > 0",
        "tap_kh_status": "unknown_or_low if tap_kh_dkh is null OR tap_kh_dkh < 2 else ok",
        "ammonia_available": "true if ammonia_source.type != 'none'"
      },
      "rules": [
        {
          "id": "R_default_safe",
          "if": { "cycling_mode_preference": "auto" },
          "then": {
            "recommended_cycling_mode": "fishless_ammonia",
            "risk_score_1_to_5": 2,
            "requires_override_acknowledgement": false,
            "reason_codes": ["DEFAULT_SAFE"]
          }
        },
        {
          "id": "R_shrimp_low_risk",
          "if": { "cycling_mode_preference": "auto", "shrimp_planned": true },
          "then": {
            "recommended_cycling_mode": "fishless_ammonia",
            "risk_score_1_to_5": 1,
            "requires_override_acknowledgement": false,
            "reason_codes": ["SHRIMP_PLANNED"]
          }
        },
        {
          "id": "R_kh_unknown_or_low",
          "if": { "cycling_mode_preference": "auto", "tap_kh_status": "unknown_or_low" },
          "then": {
            "recommended_cycling_mode": "fishless_ammonia",
            "risk_score_1_to_5": 2,
            "requires_override_acknowledgement": false,
            "reason_codes": ["KH_UNKNOWN_OR_LOW", "PREDICTABILITY_PRIORITY"]
          }
        },
        {
          "id": "R_allow_fish_in_if_user_selects",
          "if": { "cycling_mode_preference": "fish_in" },
          "then": {
            "recommended_cycling_mode": "fish_in",
            "risk_score_1_to_5": 4,
            "requires_override_acknowledgement": true,
            "reason_codes": ["USER_SELECTED_HIGHER_RISK"]
          }
        },
        {
          "id": "R_auto_fish_in_if_no_ammonia_and_high_risk",
          "if": { "cycling_mode_preference": "auto", "ammonia_available": false },
          "then": {
            "recommended_cycling_mode": "fish_in",
            "risk_score_1_to_5": 4,
            "requires_override_acknowledgement": true,
            "reason_codes": ["NO_AMMONIA_SOURCE"]
          }
        }
      ]
    },

    "override.policy.json": {
      "version": "0.1",
      "requires_acknowledgement_when": [
        "user_selected_cycling_mode == 'fish_in' AND recommended_cycling_mode == 'fishless_ammonia'",
        "risk_score_1_to_5 >= 4 AND user_selected_cycling_mode != recommended_cycling_mode"
      ],
      "acknowledgement_text": "I understand this cycling option increases livestock risk and requires frequent testing, conservative stocking, and readiness to do large water changes."
    }
  },

  "calculators": {
    "calculator.framework.json": {
      "version": "0.2",
      "defaults": {
        "cycle_ammonia_target_ppm_range": [1.5, 2.0],
        "cycle_ammonia_max_ppm": 3.0,
        "co2_on_lead_hours": 1,
        "co2_off_lead_hours": 1,
        "fertilizer_start_factor": 0.5,
        "fertilizer_maint_factor_range": [0.5, 1.0]
      },
      "constants": {
        "gh_remineralizer": {
          "g_per_l_per_1_dgh": 0.0666666667,
          "notes": "Used when the selected GH remineralizer has a label-derived GH effect model."
        },
        "kh_buffer_rule_of_thumb": {
          "g_per_10l_per_1_dkh": 0.6
        },
        "ammonia_calibration": {
          "reference_solution_percent": 10,
          "reference_dose_ml": 0.6,
          "reference_volume_l": 60,
          "reference_result_ppm": 2.0
        },
        "fertilizer_micros_label": {
          "ml_per_250l_per_week": 5.0
        }
      },
      "functions": [
        {
          "id": "derive_net_volume_l",
          "inputs": ["tank_profile.net_volume_method", "tank_profile.net_water_volume_l", "tank_profile.tank_volume_l_gross", "tank_profile.estimated_net_multiplier"],
          "outputs": ["derived.net_water_volume_l"],
          "formula_plaintext": "explicit -> net_water_volume_l; else gross * multiplier"
        },
        {
          "id": "derive_weekly_wc_volume_range_l",
          "inputs": ["derived.net_water_volume_l", "water_source_profile.weekly_water_change_percent_target"],
          "outputs": ["derived.weekly_wc_volume_l_range"],
          "formula_plaintext": "[net*pct_low/100, net*pct_high/100]"
        },
        {
          "id": "calc_gh_remineralizer_g_for_volume",
          "inputs": ["tap_gh_dgh", "target_gh_range", "volume_l"],
          "outputs": ["gh_remineralizer_g_range"],
          "formula_plaintext": "((target_low-tap)*vol*0.0666667, (target_high-tap)*vol*0.0666667)"
        },
        {
          "id": "calc_kh_buffer_g_for_volume",
          "inputs": ["tap_kh_dkh", "target_kh_dkh", "volume_l"],
          "outputs": ["kh_buffer_g"],
          "formula_plaintext": "max(0,target_kh-tap_kh)*(vol/10)*0.6"
        },
        {
          "id": "calc_ammonia_ml_for_target_ppm",
          "inputs": ["net_volume_l", "target_ppm", "solution_percent"],
          "outputs": ["ammonia_ml"],
          "formula_plaintext": "if solution_percent==10: ml=0.6*(net/60)*(target/2). else: require calibration."
        },
        {
          "id": "calc_fertilizer_micros_ml_per_week",
          "inputs": ["net_volume_l", "dose_factor"],
          "outputs": ["fertilizer_micros_ml_week"],
          "formula_plaintext": "base=5*(net/250); base*dose_factor"
        }
      ]
    }
  },

